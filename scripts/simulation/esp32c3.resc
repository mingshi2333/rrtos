:name: ESP32-C3 Verification
:description: Runs basic RRTOS on simulated ESP32-C3

$name?="esp32c3"
$bin?=@build_esp32/apps/mnist_app/mnist_app

mach create $name
machine LoadPlatformDescription @scripts/simulation/esp32c3.repl

peripherals
sysbus.uart0 CreateFileBackend @/tmp/uart_dump.txt

macro reset
"""
    sysbus LoadELF $bin
"""

runMacro $reset
